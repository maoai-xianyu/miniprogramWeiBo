/**index.wxss**/

.container {
  background: #f2f2f2;
}

.container .weibo-group {
  width: 100%;
  margin-bottom: 30rpx;
  background: #fff;
  padding: 40rpx;
  box-sizing: border-box;
}

.weibo-group .info-group {
  display: flex;
}

.info-group .thumbnil {
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%;
}

.info-group .info-right {
  margin-left: 20rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.info-right .info-username {
  font-size: 28rpx;
  color: #323232;
}

.info-right .info-detail {
  display: flex;
  font-size: 24rpx;
  color: #656565;
}

.info-detail .from {
  margin-left: 20rpx;
}

.weibo-content-group {
  padding-top: 30rpx;
}

.weibo-content-group .content {
  font-size: 32rpx;
  color: #323232;
}

.weibo-content-group .image-list-group {
  padding-top: 20rpx;
}

.weibo-handle {
  display: flex;
  padding-top: 30rpx;
  justify-content: flex-start;
  font-size: 28rpx;
}
.weibo-handle image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.weibo-handle view{
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
}

